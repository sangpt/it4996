<!-- page content -->
<div class="right_col" role="main">
  <div class="clearfix"></div>
  <div class="">
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

          <div class="x_title">
            <h2><%= @app.name %></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-chevron-down"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Edit", edit_app_path(@app) %>
                  </li>
                  <li><%= link_to "Delete", app_path(@app), method: :delete, data: { confirm: "Are you sure?" } %>
                  </li>
                </ul>
              </li>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>

          <div class="x_content">
            <%= render "dashboard/top_title" %>
          </div>
        </div>

        <div class="x_panel">
          <div class="x_title">
            <h2>Request Chart</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <%= render "chart_number_requests", data: @data %>
          </div>
        </div>

        <div class="x_panel">
          <div class="x_title">
            <h2>All Request</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <%= render "table_requests", data: @data %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
  <%= render "javascript.js" %>
</script>
<!-- /page content -->
