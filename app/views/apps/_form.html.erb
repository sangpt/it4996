<%= form_for app, html: {class: "form-horizontal form-label-left"} do |f| %>
  <div class="row">
    <div class="form-group">
      <div class="col-md-7 col-xs-12">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, autocomplete: :off, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-7 col-xs-12">
        <%= f.label :service_id, class: "control-label" %>
        <%= f.select :service_id, Service.all.collect{|service| [service.name, service.id]}, {}, class: "form-control elem-selectbox" %>
      </div>
    </div>
  </div>

  <div class="ln_solid"></div>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" do %>
      <i class="fa fa-save"></i> Save
    <% end %>
    <%= button_tag type: :reset, class: "btn btn-success" do %>
      <i class="fa fa-rotate-left"></i> Reset
    <% end %>
  </div>
<% end %>
