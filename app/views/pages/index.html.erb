<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>This month (from <%= Time.zone.now.beginning_of_month.to_date.to_s %> to <%= Time.zone.now.to_date.to_s %>)</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <%= render "today_statitics" %>
          </div>
        </div>

        <div class="x_panel">
          <div class="x_title">
            <h2>Chart</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div id="chart_number_requests">

            </div>
            <div class="clearfix"></div>
            <hr>
            <div id="chart_average_duration">

            </div>
          </div>
        </div>

        <div class="x_panel">
          <div class="x_title">
            <div class="col-md-6">
              <h3>
                List requests
              </h3>
            </div>
            <div class="col-md-6">
              <div id="reportrange" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                <span>Choose date range...</span> <b class="caret"></b>
              </div>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <%= render "table_daily" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- /page content -->

<%= render "modal_popup"%>
<script type="text/javascript">
  <%= render "highchart.js.erb", data: @data %>
</script>
