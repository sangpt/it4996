var options = {

    chart: {
        zoomType: 'xy'
    },
    title: {
        text: 'Requests Chart'
    },
    subtitle: {
        text: ''
    },
    xAxis: [{
        categories: <%= data.keys.map(&:to_s).to_s.html_safe %>,
        crosshair: true
    }],
    yAxis: [{ // Primary yAxis
        labels: {
            style: {
                color: Highcharts.getOptions().colors[1]
            }
        },
        title: {
            text: 'Request',
            style: {
                color: Highcharts.getOptions().colors[1]
            }
        }
    }, { // Secondary yAxis
        title: {
            text: 'Percent success',
            style: {
                color: Highcharts.getOptions().colors[0]
            }
        },
        labels: {
            format: '{value} %',
            style: {
                color: Highcharts.getOptions().colors[0]
            }
        },
        opposite: true
    }],
    tooltip: {
        shared: true
    },
    legend: {
        layout: 'vertical',
        align: 'left',
        x: 120,
        verticalAlign: 'top',
        y: 100,
        floating: true,
        backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
    },
    series: [{
        name: 'Request',
        type: 'column',
        yAxis: 0,
        data: <%= data.values.map &:count %>,
        tooltip: {
            valueSuffix: ' requests'
        }

    }, {
        name: 'Percent Success',
        type: 'spline',
        yAxis: 1,
        // data: [7.0, 6.9, 9.5, 14.5, 18.2, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6],
        data: <%= data.values.map {|e| (e.select(&:success?).count/e.count.to_f*100).round(2)} %>,
        tooltip: {
            valueSuffix: '%'
        }
    }]

};

$(function() {
  Highcharts.chart('chart_number_requests', options);
  // Highcharts.chart('chart_average_duration', chart_average_duration);
});
