<div class="row tile_count">
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Total Request </span>
    <div class="count"><%= @requests.size %></div>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-clock-o"></i> Total Word</span>
    <div class="count"><%= @requests.sum :token_number %></div>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Total Request Success</span>
    <div class="count green"><%= @requests.success.size %></div>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Total Request Error</span>
    <div class="count"><%= @requests.error.count %></div>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Average Duration (s)</span>
    <div class="count"><%= @requests.avg(:duration) %></div>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Average Per Word (s)</span>
    <div class="count"><%= @requests.sum(:duration) / @requests.sum(:token_number) %></div>
  </div>
</div>
